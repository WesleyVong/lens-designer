{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: cl.exe build project",
            "command": "cl.exe",
            "args": [
                "/Zi",
                "/EHsc",
                "/nologo",
                "/O2",
                "/Fe${workspaceFolder}\\${fileBasenameNoExtension}.exe",
                "${workspaceFolder}\\src\\*.c",
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}